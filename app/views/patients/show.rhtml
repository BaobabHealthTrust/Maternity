<html>
  <head>
    <title>Patient Dashboard</title>
    <!--link href="stylesheets/dashboard.css?1266397276" media="screen" rel="stylesheet" type="text/css" /-->

    <!--script type="text/javascript" language="javascript" src="/touchscreen/lib/javascripts/touchScreenToolkit.js" defer ></script-->
    <meta http-equiv='content-type' content='text/html;charset=UTF-8' />
    <script language='javascript' type='text/javascript' src='javascripts/jquery.js'></script>
    <script language="javascript" type="text/javascript" src="javascripts/jquery.flot.js"></script>
    <script language="javascript">
      tstUsername = "";
      tstCurrentDate = "2010/03/12";
      tt_cancel_show = "<%= ((@encounter_names.include?("Refer patient out?".upcase) ||
          @encounter_names.include?("DISCHARGED")) ? "/patients/end_visit?patient_id=#{ @patient.patient_id }" :
          '/people/index') %>";
          
      tt_cancel_destination = '/people/index';
    </script>
    <!--link type="text/css" href="stylesheets/graytabs.css" rel="stylesheet" />
    <link href="stylesheets/touch-fancy.css?1266397276" media="screen" rel="stylesheet" type="text/css" />
    <script src="javascripts/preload.js?1266397276" type="text/javascript"></script-->
    <!-- Uncomment/Comment the line below to enable/disable the Touchscreen Toolkit-->
    <script src="javascripts/dateselector.js?1266397276" type="text/javascript"></script>
    <!--script src="javascripts/utils.js?1266397276" type="text/javascript"></script-->
  </head>
  <body><div id='content'>
      <div id='description' style='color:#777;position:absolute;margin-top:-70px;'></div><center>
        <form id = 'dashboard' action=''>
          <table cellpadding=10>
            <tr>
              <th colspan=2>Patient Dashboard</th>
            </tr>
            <h1 id='project_name'>
              <span style='font-size: 0.8em; margin-top: 20px;'>maternity</span></h1>
            <span id='patient_name'><%= @patient.person.name %></span>
            <span id='patient_id'><%= @patient.national_id %>
            </span><span id='patient_residence'><%= @patient.person.current_residence %></span>
            <span id='patient_age'><%= @patient.person.age %></span>
            <span id='patient_gender'>Female</span><select id="tabs">
              <option value='/patients/visit_summary?patient_id=<%= @patient.id %>'>Visit Summary</option>
              <option value='/patients/visit_history?patient_id=<%= @patient.id %>'>Visit History</option>
            </select>
            <select id="links">
              <option value='/encounters/new/observations?patient_id=<%= @patient.id %>'>Observations</option>
              <option value='/encounters/new/outcome?patient_id=<%= @patient.id %>'>Update Outcome</option>
              <option value='/encounters/update_hiv_status?patient_id=<%= @patient.id %>'>Update Hiv Status</option>
              <option value='/patients/demographics?patient_id=<%= @patient.id %>'>Full Demographics</option>
              <option value='/patients/print_registration?patient_id=<%= @patient.id %>'>Print Registration</option>
            </select>
            <tr>
              <td align='center'>
                <input type='submit' value='Finish' />
              </td>
            </tr>
          </table>
        </form>
      </center>
    </div>
  </body>
</html>