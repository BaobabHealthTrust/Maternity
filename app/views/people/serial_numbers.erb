<style type="text/css">
  body {
    -moz-user-select:none;
  }

  #stats {
    width:98%;
    border:1px solid #fff;
    margin:10px;
    background:white;
  }
  #stats td, #stats th {
    text-align:center;
  }
  .odd {
    background-color: #eee;
  }

  #table_div {
    overflow:auto;
    height: 320px;
    background-color: white;
    border: solid 1px #eee;
    border-width: 1px;
    overflow: hidden;
  }

  button {
    min-height: 50px;
    min-width: 350px;
    margin: 5px;
    margin-bottom: 10px;
    font-size: 1.2em;
    background-color: #6281a7;
    color: #FFF;
    font-weight: normal;
    border-radius: 30px;
    border: 5px outset #000;
    padding: 10px;
  }

</style>
<div id="tab" style="">
  <center>
    <% if @limited_serial_numbers %>
      <h2 style="color:red;"> <blink> <%= @print_string%> </blink></h2>
    <% else %>
      <h2 style="color: #6281a7;"><%= @print_string%></h2>
    <% end %>
  </center>
  <div id="table_div">

    <table id="stats" cellpadding="0">
      <tr style="padding-top: 10px;">
        <th>
          <button onclick="window.parent.location = '/people/add_batch'">
            <span>Add New Batch</span>
          </button>
        </th>
      </tr>

    </table>
  </div>
</div>

